{
  "name": "openai-todo-assistant",
  "version": "1.0.0",
  "description": "Todo list assistant using OpenAI function calling",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:mcp": "MCP_ENABLED=true node dist/server.js",
    "dev": "tsx src/server.ts",
    "dev:mcp": "MCP_ENABLED=true tsx src/server.ts",
    "watch": "tsc -w",
    "client": "node client/mcp-client.js"
  },
  "keywords": [
    "openai",
    "assistant",
    "todo",
    "function",
    "calling"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "google-auth-library": "^9.15.1",
    "googleapis": "^146.0.0",
    "node-fetch": "^3.3.2",
    "open": "^10.1.0",
    "openai": "^4.33.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
